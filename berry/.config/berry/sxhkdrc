#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + @space
	rofi -show drun
super + b 
	bwmenu
super + semicolon
	rofimoji -f nerd_font
# Audio Controls
XF86Audio{RaiseVolume,LowerVolume}
	pamixer {-i,-d} 5
XF86AudioMute
	pamixer -t
XF86AudioPlay
	playerctl play-pause
XF86AudioPause
	playerctl play-pause
XF86Audio{Prev,Next}
	playerctl {previous,next}


# Brightness control
XF86MonBrightness{Up,Down}
	brightnessctl set {+5%,5%-}

Print	
	maim ~/Pictures/screenshots/$(date +%s).png | xclip -selection clipboard -t $(date +%s).png
ctrl + Print
	maim -s ~/Pictures/screenshots/$(date +%s).png | xclip -selection clipboard -t $(date +%s).png

#Xprop
super + x
	kitty --hold xprop
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# berry hotkeys
#
super + shift + q
    berryc quit

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + w
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
