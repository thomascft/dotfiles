{
	"layer": "top",
	"position": "top",
	"height": 40,
	"margin-top": 8, 
	"margin-right": 8, 
	"margin-left": 8, 
	"modules-left": ["custom/nix", "wlr/workspaces"],
	"modules-center": ["custom/song"],
	"modules-right": ["tray", "backlight", "pulseaudio", "network", "battery", "clock", "custom/power-menu"],

	"custom/nix": {
		"format": " "
	},

	"custom/song": {
		"format": "{}",
		"exec": "playerctl metadata -f '{{markup_escape(title)}} - {{markup_escape(artist)}}' -F",
		"on-click": "playerctl play-pause"
	},

	"tray": {},
    "backlight": {
        "format": "{icon}",
        "format-alt": "{percent}%",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "pulseaudio": {
        "format": "{icon}",
        "format-alt": "{volume}%",
        "format-muted": "ﱝ",
        "format-icons": {
			"default": ["", "", ""]
		}
    },
	"network": {
		"format-wifi": "",
		"format-ethernet": "",
		"format-disconnected": "",
		"format-alt": "{essid}"
	},
	"battery": {
		"format": "{icon}",
		"format-plugged": "ﮣ",
		"format-alt": "{capacity}%",
		"format-icons": ["", "", "", "", "", "", "", "", "", ""],
		"states": { 
			"warning": 25,
			"critical": 10
		}
	},
	"custom/power-menu": {
		"format": "",
		"on-click": "wlogout --protocol layer-shell"
	}
}
