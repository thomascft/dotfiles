configuration {
    modi: [drun, window, run];
    font: "VictorMono Nerd Font 18";
    terminal: "kitty";
}

@theme "colors.rasi"
* {
    ac: @blue;
    text-color: @fg;
    background-color: @bg;
}
window {
    border-radius: 16px;
    border: 4px;
    border-color: @ac;
    padding: 16px;
}
inputbar {
    padding: 16px;
    children: [entry];
}
entry {
    placeholder: "ï€‚ Type to Search";
}
listview {
    columns: 2;
    lines: 10;
}
element {
    padding:            12px 12px;
    children: [ element-icon, element-text ];
    spacing:            16px;
}
element selected.normal {
    background-color: @ac; 
    text-color: @bg;
    border-radius: 16px;
}
element-text {
    background-color: inherit;
    text-color: inherit;
}
element-icon {
    background-color: inherit;
    size: 24px;
}
